<html>
<head>

    <title>Hair Salon</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel='stylesheet' href='./css/main.css'>

</head>
<body>

    <div class="container-fluid">

        <header class="page-header">

            <h1 class="text-center">Welcome to the <em>Hair Salon</em> directory!</h1>

        </header>

        <section class="col-md-6 col-md-offset-3">

            <h4>Add a Stylist:</h4>

            <form action="/stylists" method="post">
                <div class="form-group">
                    <input id="name" name="name" class="form-control" type="text" placeholder="Sweeney Todd">
                </div>
                <button type="submit" class="btn btn-success">Add</button>
            </form>

            {% if stylists is not empty %}
                <p>List of all Stylists:</p>
                <ul>
                    {% for stylist in stylists %}
                        <li><a href="/stylists/{{ stylist.getId }}">{{ stylist.getName }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>There are no stylists yet!</p>
            {% endif %}

            <form action="/delete_stylists" method="post">
                <button type="submit" class="btn btn-danger">Clear Stylists</button>
            </form>

        </section>

    </div><!-- end of container -->

</body>
</html>
